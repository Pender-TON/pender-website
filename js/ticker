document.addEventListener("DOMContentLoaded", function() {
    const ticker = document.querySelector('.ticker');
    const content = document.querySelector('.content');
    let shiftWidth = content.offsetWidth; // Ширина всего содержимого
    let animationSpeed = 5; // Скорость анимации в секундах

    function animate() {
        content.style.transition = 'transform 0s'; // Сброс трансформации
        content.style.transform = 'translateX(0)'; // Возврат в начальное положение

        // После сброса немедленно начать анимацию снова
        setTimeout(() => {
            content.style.transition = `transform ${animationSpeed}s linear`;
            content.style.transform = `translateX(-${shiftWidth}px)`;
        }, 50);
    }

    // Начальная установка анимации
    content.style.transform = `translateX(-${shiftWidth}px)`;
    content.style.transition = `transform ${animationSpeed}s linear`;

    // Когда анимация завершится, начать снова
    content.addEventListener('transitionend', animate);
});
